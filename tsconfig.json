{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/",
    "paths": {
      "@lib/*": ["lib/*"],
      "@ui/*": ["components/ui/*"],
      "@components/*": ["components/*"],
      "@feat/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@type/*": ["types/*"],
      "@email/*": ["../emails/*"],
      "@api/*": ["../app/api/*"],
      "@middleware/*": ["middlewares/*"],
      "@generated/*": ["../prisma/generated/zod/*"]
    },
    "types": ["@testing-library/jest-dom"]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules", ".next"]
}
